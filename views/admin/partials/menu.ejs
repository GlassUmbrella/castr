<script>
$(function() {
	setMenuActiveItem();
});

function setMenuActiveItem() {
	var currentPath = window.location.pathname;
	var activeClassName = "active";

	if(currentPath.beginsWith("/admin/invites")) {
		$("#invites-menu-item").addClass(activeClassName);
	}

	if(currentPath.beginsWith("/admin/users")) {
		$("#users-menu-item").addClass(activeClassName);
	}
}
</script>

