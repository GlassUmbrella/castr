<% include ../partials/header %>
<% include ../partials/podcast-header %>
<script>
	function EpisodesIndexViewModel() {
		this.episodes = <%-JSON.stringify(episodes) %>;
		this.podcast = <%-JSON.stringify(podcast) %>;
	}
	
	$(document).ready(function() {
		ko.applyBindings(new EpisodesIndexViewModel());	
	});
</script>
<div class="episodes" data-bind="foreach: episodes">
	<section class="episode">
		<h3><a data-bind="attr: { 'href': '/episodes/' + episodeNumber }">Episode #<span data-bind="text: episodeNumber"></span>: <span data-bind="text: title"></span></a></h3>
		<div class="body" data-bind="text: description"></div>
	</section>
</div>
<ul class="pager">
  <li class="previous disabled">
    <a href="#">&larr; Older</a>
  </li>
  <li class="next disabled">
    <a href="#">Newer &rarr;</a>
  </li>
</ul>
<% include ../partials/footer %>
