<% include ../partials/header %>
<% include ../partials/menu %>
<h3>Request an invite</h3>
<hr>
<form method="post" class="form-horizontal">
	<fieldset>
		<% if(error) { %>
			<div class="alert alert-error">
				<button type="button" class="close fui-cross" data-dismiss="alert"></button>
		    	<%= error %>
		    </div>
		<% } %>

		<div class="control-group huge">
			<label class="control-label" for="signupName">Your name</label>
			<div class="controls">
				<input type="text" name="signupName" id="signupName" placeholder="Name" class="span6" />
			</div>
		</div>

		<div class="control-group huge">
			<label class="control-label" for="signupEmail">Email address</label>
			<div class="controls">
				<input type="text" name="signupEmail" id="signupEmail" placeholder="Email address" class="span6" />
			</div>
		</div>

		<div class="form-actions">
			<button class="btn btn-large btn-primary" type="submit">Request</button>
		</div>
	</fieldset>
</form>
<% include ../partials/footer %>