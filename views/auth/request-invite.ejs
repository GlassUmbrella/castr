<% include ../public/partials/header %>

<div class="span6 offset3">
	<h3>Request an invite</h3>
	<hr>

	<form method="post" autocomplete="off">
		<fieldset>
			<% if(error) { %>
				<div class="alert alert-error">
			    	<%= error %>
			    </div>
			<% } %>
			
			<% if(sent) { %>
				<div class="alert alert-success">
					You're in the queue.
			    </div>
			<% } %>

			<div class="control-group huge">
				<input type="text" class="span6" name="signupName" id="signupName" placeholder="Your name" autofocus autocomplete="off" />
			</div>

			<div class="control-group huge">
				<input type="email" class="span6" name="signupEmail" id="signupEmail" placeholder="Email address" autocomplete="off" />
			</div>

			<div class="control-group huge">
				<button class="btn btn-huge btn-primary btn-block" type="submit">Request invite</button>
			</div>

			<hr>

			<div class="controls-row">
				<a class="btn btn-small btn-secondary" href="/login">Already got an account?</a>
				<a class="btn btn-small btn-secondary" href="/join">Already got an invite?</a>
			</div>
		</fieldset>
	</form>
</div>

<% include ../partials/footer %>