<script>
$(function() {
	setMenuActiveItem();
});

function setMenuActiveItem() {
	var currentPath = window.location.pathname;
	var activeClassName = "active";

	if(currentPath.beginsWith("/feed")) {
		$("#feed-menu-item").addClass(activeClassName);
	}

	if(currentPath.beginsWith("/podcasts")) {
		$("#podcasts-menu-item").addClass(activeClassName);
	}
}
</script>

